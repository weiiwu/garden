<div class="col-md-6 col-md-offset-3">

  <div class="edit-plant-form">

    <h3>Edit Plant</h3>

    <%= simple_form_for @plant, :html => { :multipart => true } do |f| %>
      <%= f.select :category_id, @categories %>
      <%= f.file_field :plant_img %>
      <%= f.input :name, label: "Plant Name" %>
      <%= f.input :description %>
      <%= f.input :owner %>
      <%= f.button :submit, :class => 'btn-custom2' %>
      <%= link_to "Back", root_path, class: "btn btn-custom" %>
    <% end %>

  </div>

</div>
